@model Linko.LinkoExchange.Web.ViewModels.Account.ChangePasswordViewModel

@{
    ViewBag.Title = "";
    ViewBag.Description = "";
    ViewBag.SubTitle = Label.ChangePassword;
}

<div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
    <div>
        <h1 class="h3">@ViewBag.SubTitle</h1>
    </div>
    <div class="box box-primary">
        <section class="box-body" id="ChangePasswordForm">

            <div class="alert alert-dismissible alert-success">
                <button aria-hidden="true" class="close" data-dismiss="alert" type="button">&times;</button>
                <h5>
                    <i class="fa fa-check icon"></i>
                    @ViewBag.SuccessMessage
                </h5>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render(paths:"~/bundles/jqueryval")
}

<script>
    window.setTimeout(function()
        {
            window.location.href = '@Url.Action(actionName:"Index", controllerName:"Home")';
        }
        , 3000)
</script>