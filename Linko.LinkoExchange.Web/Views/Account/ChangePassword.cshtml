@model Linko.LinkoExchange.Web.ViewModels.Account.ChangePasswordViewModel

@{
    ViewBag.Title = Label.ChangePassword;
    ViewBag.Description = "";
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}  
  
    <section>
        <ol class="breadcrumb">
            <li><a href="#" onclick="location.href = '@Url.Action(actionName: "Index", controllerName: "Home")'"><i class=""></i> Home </a></li>
            <li><a href="#" onclick="location.href = '@Url.Action(actionName: "Profile", controllerName: "User")'"><i class=""></i> Profile </a></li>

            <li class="active">Change Password</li>
        </ol>
    </section>
 
    <div>
        <h1 class="h3">@ViewBag.SubTitle</h1>

    </div>
    <div class="box box-primary">
        <section id="ChangePasswordForm" class="box-body">

            @using (Html.BeginForm(actionName: "ChangePassword", controllerName: "Account", method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", role = "form" }))
                {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(excludePropertyErrors: true, message: Message.ValidationSummaryHeaderText, htmlAttributes: new { @class = "alert alert-danger" })
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        <div class="col-md-12">
                            Passwords must be at least 8 characters, have at least one digit ('0'-'9'),
                            and have at least one lowercase ('a'-'z') and one uppercase ('A'-'Z') letter.
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })

                        <div class="col-md-7">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group pull-right">
                            <input type="submit" class="btn btn-primary" value="@Label.ChangePassword" />
                        </div>
                    </div>
                </div>
            }
        </section>@*.box-body*@
    </div> 
    @section Scripts {
        @Scripts.Render(paths: "~/bundles/jqueryval")
    } 
 