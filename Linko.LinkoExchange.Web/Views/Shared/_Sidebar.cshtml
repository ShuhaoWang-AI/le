                <li class="treeview @Html.IsActive(actions:"IndustryUsers,IndustryUserDetails,IndustryUserRemove,IndustryUserChangeStatus,Settings,PendingUserApprovals,PendingUserApprovalDetails", controllers:"Industry")">
                    <a href="#">
                        <i class="fa fa-bank fa-fw"></i>
                        <span>Industry Account</span>
                        @if (ViewBag.PendingRegistrationProgramUsersCount != null && ViewBag.PendingRegistrationProgramUsersCount > 0)
                        {
                            <span class="pull-right-container">
                                <span class="label label-info">@ViewBag.PendingRegistrationProgramUsersCount</span>
                            </span>
                        }
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsActive(actions:"IndustryUsers,IndustryUserDetails,IndustryUserRemove,IndustryUserChangeStatus", controllers:"Industry")">
                            <a href="#" onclick="location.href = '@Url.Action(actionName:"IndustryUsers", controllerName:"Industry")'">
                                <i class="fa fa-fw fa-users"></i>
                                <span>Users</span>
                            </a>
                        </li>
                        <li class="@Html.IsActive(actions:"Settings", controllers:"Industry")">
                            <a href="#" onclick="location.href = '@Url.Action(actionName:"Settings", controllerName:"Industry")'">
                                <i class="fa fa-cog fa-fw"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li class="@Html.IsActive(actions:"PendingUserApprovals,PendingUserApprovalDetails", controllers:"Industry")">
                            <a href="#" onclick="location.href = '@Url.Action(actionName:"PendingUserApprovals", controllerName:"Industry")'">
                                <i class="fa fa-fw fa-user-plus"></i>
                                <span>Pending Registrations</span>

                                @if (ViewBag.PendingRegistrationProgramUsersCount != null && ViewBag.PendingRegistrationProgramUsersCount > 0)
