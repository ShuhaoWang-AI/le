@model IEnumerable<Linko.LinkoExchange.Web.ViewModels.Shared.MonitoringPointViewModel>
@{
    ViewBag.Title = "New Sample";
}

<section>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="location.href = '@Url.Action(actionName:"Index", controllerName:"Industry")'"><i class=""></i> Home </a>
        </li>
        <li class="active">New Sample</li>
    </ol>
</section>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Sample</h3>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body box-collapse collapse form-horizontal in">
        <div class="form-group">
            <div class="col-md-12">
                <strong>Select Monitoring Point</strong>
            </div>
            <div class="col-md-12">
                @if (Model.Count() > 1)
                {
                    foreach (var m in Model)
                    {
                        <div class="col-md-12 form-group">
                            <label class="col-md-offset-2">
                                <input name="monitoringPointId" type="radio" value=@m.Id />
                                <span>@m.Name</span>
                                @if (!m.Description.IsEmpty())
                                {
                                    <span class="text-info"> - @m.Description</span>
                                }
                            </label>
                        </div>
                    }
                }
                else
                {
                    <span>No Monitoring point found.</span>
                }
            </div>

            <div class="col-md-12">
                <!-- Date range -->
                <strong>Enter Sample Period</strong>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label" for="dStartDate">* Start Date:</label>
                    <div class="col-md-4">
                        @(Html.Kendo().DateTimePicker()
                              .Name(componentName: "startDateTime")
                              .Value(date: DateTime.Now)
                              .Format(format: "MM/dd/yyyy hh:mm:ss tt")
                              .HtmlAttributes(attributes: new
                              {
                                  style = "width:210px;"
                              }))
                    </div>

                    <label class="col-md-2 control-label" for="dEndDate">* End Date:</label>
                    <div class="col-md-4">
                        @(Html.Kendo().DateTimePicker()
                              .Name(componentName: "endDateTime")
                              .Value(date: DateTime.Now)
                              .Format(format: "MM/dd/yyyy hh:mm:ss tt")
                              .HtmlAttributes(attributes: new
                              {
                                  style = "width:210px;"
                              }))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="col-md-12 form-group">
            <button class="btn btn-primary btn-sm pull-right" onclick="location.href = '@Url.Action(actionName:"NewSampleDetailStep2", controllerName:"Industry")'">Create Draft</button>
        </div>
    </div><!-- box-footer -->
</div>